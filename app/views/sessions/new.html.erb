<h1>Sessions#new</h1>
<p>Find me in app/views/sessions/new.html.erb</p>

<div>
<% if flash[:alert]%>
<p id = "notice"><% flash[:alert] %></p>
<% end %>
<%= form_tag do %>
<fieldset>
	<legend>Please login in </legend>
	<div>
		<%= label_tag :name, "Name" %>
		<%= text_field_tag :name, param[:name] %>
		<%label_tag :password, 'Password' %>
		
		<= %password_field_tag :password, param[:password] %>
	</div>
	<%submit_tag "Login" %>
</div>
</fieldset>

</div>